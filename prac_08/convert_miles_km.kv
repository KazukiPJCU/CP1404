BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: 'Enter Miles'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            Button:
                text: 'Up 1'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down 1'
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        font_size: 48
        text: ''
        color: (201/255,204/255,36/255,1)   #This may not be the correct way to do this
